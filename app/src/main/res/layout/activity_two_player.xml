<?xml version="1.0" encoding="utf-8"?>
<!-- Ensure the scoreboard sits below the app bar in twoâ€‘player mode by adding
     top padding equal to the action bar size. Otherwise, the top TextView
     may overlap the bar and appear missing. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="?attr/actionBarSize">

    <!-- Scoreboard at the top showing Player 1 : Player 2 scores. Placed
         outside of the main content layout so it appears beneath the action
         bar with a margin. -->
    <TextView
        android:id="@+id/score_text_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <!-- Content area that expands to fill available space and centers its children vertically -->
    <LinearLayout
        android:id="@+id/content_layout_two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Container shown while either player is selecting a symbol -->
        <LinearLayout
            android:id="@+id/choices_container_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Label indicating whose turn it is -->
            <TextView
                android:id="@+id/turn_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Prompt to select a symbol -->
            <TextView
                android:id="@+id/select_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_symbol"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Buttons for the three choices -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/rock_button_two"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/kamen_desc"
                    android:src="@drawable/rock"
                    android:layout_marginBottom="16dp" />
                <ImageButton
                    android:id="@+id/paper_button_two"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/papir_desc"
                    android:src="@drawable/paper"
                    android:layout_marginBottom="16dp" />
                <ImageButton
                    android:id="@+id/scissors_button_two"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/nuzky_desc"
                    android:src="@drawable/scissors" />
            </LinearLayout>
        </LinearLayout>

        <!-- Result container displayed after both players have chosen -->
        <LinearLayout
            android:id="@+id/result_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/result_text_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Player 1 result -->
            <TextView
                android:id="@+id/player1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />
            <ImageView
                android:id="@+id/player1_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp" />

            <!-- Player 2 result -->
            <TextView
                android:id="@+id/player2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />
            <ImageView
                android:id="@+id/player2_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Repeat button aligned at bottom center for starting another round -->
    <ImageButton
        android:id="@+id/repeat_button_two"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/replay"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/repeat_desc"
        android:tint="@null"
        android:visibility="gone" />

</LinearLayout>